  .ai-gifting-story__divider-line-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: {{ block.settings.divider_color }};
    opacity: 0;
    transition: opacity 0.8s ease;
  }

