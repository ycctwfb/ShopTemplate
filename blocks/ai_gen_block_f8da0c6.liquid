  .ai-gifting-story__image-column-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
  }

  .ai-gifting-story__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
  }

  .ai-gifting-story__image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-gifting-story__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f5e5e5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-gifting-story__image-placeholder-{{ ai_gen_id }} svg {
