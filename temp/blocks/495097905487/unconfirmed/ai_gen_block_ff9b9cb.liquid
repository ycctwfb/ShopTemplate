{% doc %}
  @prompt
    add a small vertical spacer, it should be transparrent
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-spacer-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    height: {{ block.settings.spacer_height }}px;
    background: transparent;
  }

  @media screen and (max-width: 749px) {
    .ai-spacer-{{ ai_gen_id }} {
      height: {{ block.settings.spacer_height_mobile }}px;
    }
  }
{% endstyle %}

<spacer-block-{{ ai_gen_id }}
  class="ai-spacer-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
</spacer-block-{{ ai_gen_id }}>

<script>
  (function() {
    class SpacerBlock{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }
    customElements.define('spacer-block-{{ ai_gen_id }}', SpacerBlock{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Vertical spacer",
  "tag": null,
  "settings": [
    {
      "type": "range",
      "id": "spacer_height",
      "label": "Desktop height",
      "min": 10,
      "max": 200,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "spacer_height_mobile",
      "label": "Mobile height",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Vertical spacer"
    }
  ]
}
{% endschema %}
